<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SoundWaveAddActivity">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <Button
                    android:id="@+id/btn_play_sound_wave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:text="播放声波" />


            </LinearLayout>


    <View
        android:layout_marginTop="@dimen/side_top"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/splite_line" />

    <ListView
        android:id="@+id/lv_device_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/splite_line"
        android:dividerHeight="1px" >
    </ListView>

</LinearLayout>